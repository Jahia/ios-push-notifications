<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.services.content.rules.ModuleGlobalObject">
        <property name="globalRulesObject">
            <map>
                <entry key="ruleService">
                    <bean class="org.jahia.demos.apple.watch.RuleService">
                        <property name="applePushNotificationService" ref="applePushNotificationService" />
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="applePushNotificationService" class="org.jahia.demos.apple.watch.ApplePushNotificationService">
    </bean>
</beans>